<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css?family=Questrial&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
</head>

<body>
  <section class="hero is-success is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-4 is-offset-4">
          <!--           <h3 class="title has-text-black">Login</h3>
          <hr class="login-hr"> -->
          <div class="box">
            <figure class="avatar">
              <img src="/images/user.svg" alt="login" width="100px" height="100px">
            </figure>
            <% if (messages.error) { %>
            <div class="notification is-danger is-light">
              <button class="delete"></button>
              <strong><%- messages.error %></strong>
            </div>
            <% } %><% if (messages.success) { %>
            <div class="notification is-success is-light">
              <button class="delete"></button>
              <strong><%- messages.success %></strong>
            </div>
            <% } %>
            <form method="POST">
              <div class="field">
                <div class="control">
                  <input class="input is-medium" name="email" type="text" placeholder="Your Email" autofocus="">
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <input class="input is-medium" name="password" type="password" placeholder="Your Password">
                </div>
              </div>
              <button type="submit" class="button is-block is-primary is-medium is-fullwidth">Login <i
                  class="fa fa-sign-in" aria-hidden="true"></i></button>
            </form>
          </div>
          <p class="has-text-primary">
            &nbsp;Â·&nbsp; <a href="../signup">Sign Up</a> &nbsp;Â·&nbsp;
            <!--<a href="../forget">Forgot Password</a> &nbsp;-->
          </p>
          <br>
          <strong class="has-text-black">Made With ðŸ’– By YsnIrix</strong>
        </div>
      </div>
    </div>
  </section>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
        const $notification = $delete.parentNode;

        $delete.addEventListener('click', () => {
          $notification.parentNode.removeChild($notification);
        });
      });
    });
  </script>
</body>

</html>